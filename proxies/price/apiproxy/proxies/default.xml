<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <Description/>
    <FaultRules/>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <Name>sharedAuthWithOkta</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <Flows>
        <Flow name="OptionsPreFlight">
            <Request/>
            <Response/>
            <Condition>request.verb == "OPTIONS" AND request.header.origin != null AND request.header.Access-Control-Request-Method != null</Condition>
        </Flow>
        <Flow name="POST/prices/products">
            <Description/>
            <Request>
                <Step>
                    <Name>saasag.prod_price_calculate</Name>
                    <Condition>(is_jwt != true) OR !(request.header.scopes ~ "*price%.prod_price_calculate*")</Condition>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/prices/products") and (request.verb = "POST")</Condition>
        </Flow>
    </Flows>
    <HTTPProxyConnection>
        <BasePath>/price</BasePath>
        <Properties/>
    </HTTPProxyConnection>
    <RouteRule name="NoRoute">
        <Condition>request.verb == "OPTIONS" AND request.header.origin != null AND request.header.Access-Control-Request-Method != null</Condition>
    </RouteRule>
    <RouteRule name="k8s-v2-prod">
        <Condition>environment.name = "prod" AND request.header.x-version == "v2"</Condition>
        <TargetEndpoint>k8s-v2-prod</TargetEndpoint>
    </RouteRule>
    <RouteRule name="k8s-deprecated-prod">
        <Condition>environment.name = "prod" AND ((proxy.pathsuffix Matches "/prices/products") or (proxy.pathsuffix Matches "/prices/saleprice")) </Condition>
        <TargetEndpoint>k8s-deprecated-prod</TargetEndpoint>
    </RouteRule>
    <RouteRule name="k8s-prod">
        <Condition>environment.name ~ "*prod*"</Condition>
        <TargetEndpoint>k8s-prod</TargetEndpoint>
    </RouteRule>
    <RouteRule name="k8s-v2-develop">
        <Condition>request.header.k8s-develop-redirect == true AND request.header.x-version == "v2"</Condition>
        <TargetEndpoint>k8s-v2-develop</TargetEndpoint>
    </RouteRule>
    <RouteRule name="k8s-deprecated-develop">
        <Condition>request.header.k8s-develop-redirect == true  AND ((proxy.pathsuffix Matches "/prices/products") or (proxy.pathsuffix Matches "/prices/saleprice")) </Condition>
        <TargetEndpoint>k8s-deprecated-develop</TargetEndpoint>
    </RouteRule>
    <RouteRule name="k8s-develop">
        <Condition>environment.name ~ "*dev*"</Condition>
        <TargetEndpoint>k8s-develop</TargetEndpoint>
    </RouteRule>
    <RouteRule name="k8s-v2-stage">
        <Condition>request.header.x-version == "v2"</Condition>
        <TargetEndpoint>k8s-v2-stage</TargetEndpoint>
    </RouteRule>
    <RouteRule name="deprecated-default">
        <Condition>((proxy.pathsuffix Matches "/prices/products") or (proxy.pathsuffix Matches "/prices/saleprice")) </Condition>
        <TargetEndpoint>k8s-deprecated-stage</TargetEndpoint>
    </RouteRule>
    <RouteRule name="k8s-stage">
    <Condition>environment.name ~ "*stage*"</Condition>
        <TargetEndpoint>k8s-stage</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>